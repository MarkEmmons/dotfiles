	position top
    font -gohu-gohufont-medium-r-normal--11-80-100-100-c-60-iso10646-1
	mode dock

	colors {
		background $bg
		statusline $fg

		# Colors			Border	Background	Title
		focused_workspace   $fg 	$bg 		$fg $c3 $c2	
		active_workspace    $fg		$bg			$fg	$c3	$c2
		inactive_workspace	$fg		$bg			$fg	$c6	$c4
		urgent_workspace	$fg		$bg			$fg	$c1	$c11
	}
}

