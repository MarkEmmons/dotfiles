client.focused          $c11    $bg     $fg  $bg       $bg
client.focused_inactive $c3     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $c1     $bg     $fg  $bg       $bg
client.placeholder      $fg     $bg     $fg  $bg       $bg

client.background $bg

